<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="DayNightLux.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:DayNightLux.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>

        <Tab Title="Day"
             Icon="sun_black">
            <ShellContent ContentTemplate="{DataTemplate views:DayPage}"/>
        </Tab>

        <Tab Title="Night"
             Icon="moon_black.png">
            <ShellContent ContentTemplate="{DataTemplate views:NightPage}"/>
        </Tab>

    </TabBar>
</Shell>
